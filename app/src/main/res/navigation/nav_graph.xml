<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_UserProfileFragment"
            app:destination="@id/UserProfileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_UserProfileFragment2"
            app:destination="@id/UserProfileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_RegisterUserFragment"
            app:destination="@id/RegisterUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/RegisterUserFragment"
        android:label="register_fragment"
        tools:layout="@layout/register_fragment" >
        <action
            android:id="@+id/action_RegisterUserFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/UserProfileFragment"
        android:label="register_fragment"
        tools:layout="@layout/user_profile_fragment" />
</navigation>